{
  "name": "mailmirror-preview",
  "displayName": "MailMirror - Mobile Email Preview",
  "description": "Preview and test email templates on mobile devices in real-time",
  "version": "0.0.1",
  "publisher": "mailmirror",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mailmirror/mailmirror-preview"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mailmirror.startPreview",
        "title": "MailMirror: Start Mobile Preview"
      },
      {
        "command": "mailmirror.stopPreview",
        "title": "MailMirror: Stop Mobile Preview"
      },
      {
        "command": "mailmirror.fixForOutlook",
        "title": "MailMirror: Fix for Outlook"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mailmirror-preview",
          "title": "MailMirror Preview",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "mailmirror-preview": [
        {
          "type": "webview",
          "id": "mailmirror.previewPanel",
          "name": "Mobile Preview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "dev": "tsc -watch -p ./",
    "package": "vsce package",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mailmirror/renderer": "*",
    "express": "^4.21.2",
    "qrcode": "^1.5.4",
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^22.10.2",
    "@types/express": "^5.0.0",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.7.2",
    "@vscode/vsce": "^3.2.1"
  }
}
